#!/usr/bin/env node

/**
 * Module dependencies.
 */

var app = require('../app');
var adminApp = require('../adminApp');
var debug = require('debug')('api:server');
var http = require('http');

/**
 * Get port from environment and store in Express.
 */

var port = normalizePort(process.env.PORT || '3001');
app.set('port', port);
var adminPort = normalizePort(process.env.PORT || '3002');
adminApp.set('port', adminPort);

/**
 * Create HTTP server.
 */

var server = http.createServer(app);
var adminServer = http.createServer(adminApp);

/**
 * Setup Socket.IO on non-Admin server
 */
const spotifyAdminController = require('../controllers/spotify-admin-controller');
const stickyNoteController = require('../controllers/sticky-note-controller');
const roommatesController = require('../controllers/roommates-controller'); 
const io = require('socket.io')(server);

io.on('connection', (socket) => {
  socket.on("disconnect", () => {
    if (socket.userName) {
      spotifyAdminController.socket.handleDisconnect(socket.userName);
      socket.broadcast.emit('spotify remove user', socket.userName);
    }
  });

  /********************
   * SPOTIFY          *
   ********************/
  socket.on('spotify login', (user) => {
    socket.userName = user;
    spotifyAdminController.socket.handleNewUser(socket);

    // confirm user login successful
    socket.emit('spotify login');

    // emit new user to all other users
    socket.broadcast.emit('spotify new user', user);
  });

  socket.on('spotify device change', (deviceId) => {
    spotifyAdminController.socket.handleDeviceChange(socket.userName, deviceId);
    socket.broadcast.emit('spotify device change', deviceId);
  });

  socket.on('spotify add to queue', (obj) => {
    spotifyAdminController.socket.handleAddToQueue(obj);
    socket.broadcast.emit('spotify add to queue', obj);
  });

  socket.on('spotify remove from queue', (index) => {
    spotifyAdminController.socket.handleRemoveFromQueue(index);
    socket.broadcast.emit('spotify remove from queue', index);
  });

  socket.on('spotify resume', () => {
    spotifyAdminController.socket.handleResume(socket.userName);
    socket.broadcast.emit('spotify resume');
  });

  socket.on('spotify pause', () => {
    spotifyAdminController.socket.handlePause(socket.userName);
    socket.broadcast.emit('spotify pause');
  });

  socket.on('spotify next', () => {
    spotifyAdminController.socket.handleNext(socket.userName, io);
    socket.broadcast.emit('spotify next');
  });

  /********************
   * DASHBOARD        *
   ********************/
  socket.on('dashboard login', () => {
    socket.emit('dashboard login');
    socket.emit('roommates init', roommatesController.getRoommates());
    socket.emit('sticky note init', stickyNoteController.getStickyNotes());
  });

  /*
   * ROOMMATES
   */
  socket.on('roommates add', (newRoommate) => {
    roommatesController.handleAddRoommate(newRoommate);
    socket.broadcast.emit('roommates add', newRoommate);
  });

  socket.on('roommates remove', (index) => {
    roommatesController.handleRemoveRoommate(index);
    socket.broadcast.emit('roommates remove', index);
  });

  socket.on('roommates in out button change', ({index, value}) => {
    roommatesController.handleInOutButtonChange(index, value);
    socket.broadcast.emit('roommates in out button change', {
      index: index,
      value: value
    });
  });

  /*
   * STICKY NOTE
   */
  socket.on('sticky note add', (newNote) => {
    stickyNoteController.handleAddStickyNote();
    socket.broadcast.emit('sticky note add');
  });

  socket.on('sticky note delete', (note) => {
    stickyNoteController.handleDeleteStickyNote(note);
    socket.broadcast.emit('sticky note delete', note);
  });

  socket.on('sticky note edit title', ({note, title}) => {
    stickyNoteController.handleEditStickyNoteTitle(note, title);
    socket.broadcast.emit('sticky note edit title', {
      note: note,
      title: title
    });
  });

  socket.on('sticky note edit text', ({note, text}) => {
    stickyNoteController.handleEditStickyNoteText(note, text);
    socket.broadcast.emit('sticky note edit text', {
      note: note,
      text: text
    });
  });
});

/**
 * Listen on provided port, on all network interfaces.
 */

server.listen(port);
server.on('error', onError);
server.on('listening', onListening);

adminServer.listen(adminPort, 'localhost'); // only allow this computer access to adminServer
adminServer.on('error', onError);
adminServer.on('listening', onListening);

/**
 * Normalize a port into a number, string, or false.
 */

function normalizePort(val) {
  var port = parseInt(val, 10);

  if (isNaN(port)) {
    // named pipe
    return val;
  }

  if (port >= 0) {
    // port number
    return port;
  }

  return false;
}

/**
 * Event listener for HTTP server "error" event.
 */

function onError(error) {
  if (error.syscall !== 'listen') {
    throw error;
  }

  var bind = typeof port === 'string'
    ? 'Pipe ' + port
    : 'Port ' + port;

  // handle specific listen errors with friendly messages
  switch (error.code) {
    case 'EACCES':
      console.error(bind + ' requires elevated privileges');
      process.exit(1);
      break;
    case 'EADDRINUSE':
      console.error(bind + ' is already in use');
      process.exit(1);
      break;
    default:
      throw error;
  }
}

/**
 * Event listener for HTTP server "listening" event.
 */

function onListening() {
  var addr = server.address();
  var bind = typeof addr === 'string'
    ? 'pipe ' + addr
    : 'port ' + addr.port;
  debug('Listening on ' + bind);
}
